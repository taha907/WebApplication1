@model Movie

<h1>Create Movie</h1>
<!--
    burda formun action parametresini yazmasan dahi baðlý olduðu action metodu
    default olarak form uygulandýktan sonra döner.
    Daha sonrada Create Action metodu bu viewi tekrar döndürür-->
<form method="post"  asp-controller="Movies" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input asp-for="GenreId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <!--Butona týklandýðýnda, form içindeki bilgiler ilgili action'a ilgili method tipi ile iþaretlenmiþ olan actiona gönderilir-->
</form>