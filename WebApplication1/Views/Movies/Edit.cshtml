@model Movie

<h1>Update Movie Screen</h1>
<!--
    burda formun action parametresini yazmasan dahi baðlý olduðu edit metodu
    default olarak form uygulandýktan sonra döner.
    Daha sonrada Edit Action metodu bu viewi tekrar döndürür-->
<form method="post" asp-controller="Movies" asp-action="Edit">
    <!--hidden ne demek? açýkla -->
    <input type="hidden" name="MovieId" value="@Model.MovieId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" value="@Model.Description"> </textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" value="@Model.Director" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input asp-for="GenreId" class="form-control" value="@Model.GenreId" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <!--Butona týklandýðýnda, form içindeki bilgiler ilgili action'a ilgili method tipi ile iþaretlenmiþ olan actiona gönderilir-->
</form>